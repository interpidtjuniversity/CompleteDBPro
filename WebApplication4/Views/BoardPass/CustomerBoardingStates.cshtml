    <script type="text/javascript" src="~/Scripts/jquery-3.4.0.min.js"></Script >
        <script type="text/javascript">
            $(document).on('click', '#buttonu', function () {
                var x = document.getElementById("mytab");
                var rows = x.rows.length;
                var index = $(this).parents("tr").index();

                if (index + 1 < rows) {
                    var cm = confirm("确定更改该乘客状态?");
                    if (cm == true) {
                        var x = document.getElementById("mytab");            //需要更改的行数
                        //更具cid fid修改customer状态为已登机
                        var cid = $(this).parents("tr").find("td").eq(0).text();
                        var seat = $(this).parents("tr").find("td").eq(5).text()   //座位
                        var state = $(this).parents("tr").find("td").eq(6).text()   //当前状态

                        document.postformid.c_id.value = cid;
                        document.postformid.seat.value = seat;
                        document.postformid.s.value = state;
                        document.postformid.submit();
                    }
                }
    });
