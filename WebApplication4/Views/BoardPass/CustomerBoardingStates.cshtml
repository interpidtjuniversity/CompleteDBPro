                <li><a href="/Luggage/ShowLuggages">行李托运</a></li>
                <li class="current"><a href="/BoardPass/ShowFlightsState">登机管理</a></li>

            </ul>
            
        </div>


        <div class="title">
            <h1>乘客状态表</h1>
        </div>
        <table width="90%" id="mytab" border="1" class="t1">
            <tr>
            <td width="15%">乘客ID</td>
            <td width="15%">姓名</td>
            <td width="15%">性别</td>
            <td width="20%">电话号码</td>
            <td width="20%">航班</td>
            <td width="20%">座位</td>
            <td width="15%">状态</td>
            </tr>

            @{
                int flag = 0;
                string fid = "";

                foreach (CustomerBoardingState cbs in Model)
                {
                    if (flag % 2 == 0)
                    {
                        <tr class="a1">
                            <td>@Html.DisplayFor(m => cbs.Customer_ID)</td>
                            <td>@Html.DisplayFor(m => cbs.name)</td>
                            <td>@Html.DisplayFor(m => cbs.gender)</td>
                            <td>@Html.DisplayFor(m => cbs.phone)</td>
                            <td>@Html.DisplayFor(m => cbs.Flight_ID)</td>
                            <td>@Html.DisplayFor(m => cbs.seat)</td>
                            <td id="buttonu" class="s3" onmouseover="this.className='s4'" onmouseout="this.className='s3'">@Html.DisplayFor(m => cbs.state)</td>
                        </tr>
                        flag++;
                        fid = cbs.Flight_ID;
                    }
                    else
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => cbs.Customer_ID)</td>
                            <td>@Html.DisplayFor(m => cbs.name)</td>
                            <td>@Html.DisplayFor(m => cbs.gender)</td>
                            <td>@Html.DisplayFor(m => cbs.phone)</td>
                            <td>@Html.DisplayFor(m => cbs.Flight_ID)</td>
                            <td>@Html.DisplayFor(m => cbs.seat)</td>
                            <td id="buttonu" class="s3" onmouseover="this.className='s4'" onmouseout="this.className='s3'">@Html.DisplayFor(m => cbs.state)</td>
                        </tr>
                        flag++;
                    }
                }
            }
        </table>

